<%= render 'sitemap_buttons' %>

<div class="main-content padded row-fluid clearfix">
  <div id="sitemap">
    <ul class="nav nav-list">
      <li class="nav-list-item">
        <span class="nav-list-span <%= sitemap_depth_tag(@root_section_node) %>">
            <span class="text">
              <%= icon_tag(@root_section_node) %>
              My Site
            </span>
          <%# Need to make the following buttons work%>
          <%= render partial: 'row_buttons', locals: {section_node: @root_section_node} %>
          <%= render partial: 'status', locals: {parent: @root_section_node.node, content: @root_section_node.node} %>
        </span>
        <% children = @sitemap[@root_section_node] %>
        <%= render partial: 'row', locals: {parent: @root_section_node, children: children} %>
      </li>
    </ul>
  </div>
</div>

